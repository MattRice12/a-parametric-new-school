<h1>Please sign in </h1>

<p class="field_with_errors"><%= flash[:alert] %></p>
<%= form_for '/sign_in', method: "POST" do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <div class='actions'>
    <%= submit_tag "Submit" %>
  </div>
<% end %>
