<!DOCTYPE html>
<html>
  <head>
    <title>A Parametric New School</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= render "shared/nav" unless @disable_nav %>
    </header>
      <% flash.each do |key, value| %>
        <p> <%= "#{key.titleize}: #{value}" %></p>
      <% end %>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
