<div class="show-school-total">
  <div class="show-school-block">
    <div class="show-school-name-block">
      <h1 class="show-school-name"><%= school.name %></h1>
    </div>
  </div>

  <div class="show-teacher-block-total">
    <% teachers.each do |teacher| %>
    <div class="show-buttons2">
       <%= link_to("Edit", edit_school_path(school), class: "button-primary") %>

       <%= link_to "Delete", teacher_path(teacher), class: "button-primary", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
      <div class="show-teacher-student-block">
          <h2 class="show-teacher-name"> <%= link_to teacher.name, teacher %>
          <% teacher.students.order(:name).each do |student| %>
          <h3 class="show-student-name"> <%= link_to student.name, student %>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
