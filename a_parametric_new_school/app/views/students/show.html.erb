<div class="show-teacher-total">
  <div class="show-school-name-block">
    <h1 class="show-school-name"><%= school.name %></h1>
    <h2 class="show-teacher-name"><%= teacher.name %></h2>
    <h3 class="student-name"> <%= student.name %></h3>

    <div class="button-set">
      <%= link_to("Edit", edit_student_path, class: "button-primary") %>

      <%= link_to "Delete", student_path(student), class: "button-primary", method: :delete, data: {confirm: "This will delete the student. Are you sure you want to continue?"} %>
    </div>
    <%= link_to "Back", schools_path, class: "button-primary"%>
  </div>
</div>
